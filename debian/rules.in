#!/usr/bin/make -f
POSTGRESQL_VERSION=@PGLONGVER@
PGSQL_TYPE=@PGSHORTVER@
#export DH_VERBOSE=1


# Set up some useful variables
IPLIKE_VERSION=2.0.3
DEB_TAR_SRCDIR := iplike-$(IPLIKE_VERSION)
PG_LIBDIR := /usr/lib/postgresql/$(POSTGRESQL_VERSION)/lib

#include /usr/share/cdbs/1/rules/tarball.mk
include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/class/autotools.mk
include /usr/share/cdbs/1/rules/debhelper.mk

PATH := /usr/lib/postgresql/$(POSTGRESQL_VERSION)/bin:$(PATH)

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

debian/postinst: debian/postinst.in
	cat $< | sed -e 's,#POSTGRESQL_VERSION#,$(POSTGRESQL_VERSION),g' -e 's,#PGSQL_TYPE#,$(PGSQL_TYPE),g' -e 's,#PG_LIBDIR#,$(PG_LIBDIR),g' > $@
	chmod a+x $@

debian/prerm: debian/prerm.in
	cat $< | sed -e 's,#POSTGRESQL_VERSION#,$(POSTGRESQL_VERSION),g' -e 's,#PGSQL_TYPE#,$(PGSQL_TYPE),g' -e 's,#PG_LIBDIR#,$(PG_LIBDIR),g' > $@
	chmod a+x $@

configure:
	dh_testdir
	# This handles building directly from the git repo
	if [ ! -e ./configure ]; then autoreconf -fvi; fi
	dh_auto_configure

build: configure
	dh_auto_build
	dh_auto_test

# Build architecture-independent files here.
binary-indep: install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install debian/postinst debian/prerm
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	# Lintian overrides
	mv $(CURDIR)/debian/iplike-pgsql$(PGSQL_TYPE)/usr/sbin/install_iplike.sh $(CURDIR)/debian/iplike-pgsql$(PGSQL_TYPE)/usr/sbin/install_iplike-$(PGSQL_TYPE).sh
	mkdir -p -m 755 $(CURDIR)/debian/iplike-pgsql$(PGSQL_TYPE)/usr/share/lintian/overrides
	install -m 644 $(CURDIR)/debian/overrides \
		$(CURDIR)/debian/iplike-pgsql$(PGSQL_TYPE)/usr/share/lintian/overrides/libiplike-pgsql$(PGSQL_TYPE)
	find debian ! -type d | sort -u
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: binary-indep binary-arch binary install
